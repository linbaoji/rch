<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape >
            <!-- from top to bottom -->
           <solid android:color="@android:color/white"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:right="2dp"
        android:left="2dp"
        android:bottom="2dp"
        >
        <shape >
            <corners android:radius="5dp" />
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</layer-list>