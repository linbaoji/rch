                        <TextView
                            android:layout_width="99dp"
                            android:layout_height="28dp"
                            android:text="高效检测快至24H售出"
                            android:textSize="12sp"
                            android:textColor="@color/black_1"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>


                </LinearLayout>

