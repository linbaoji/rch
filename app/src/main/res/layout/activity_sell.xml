                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人已售出爱车"
                        android:textColor="@color/black_1"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

