<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <!--Q1-->
    <LinearLayout
        android:id="@+id/problem_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/problem_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_2"
                android:text="Q1"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/problem_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="10dp"
                android:text="我多久可以把车卖出去?"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black_1"
                />

            <ImageView
                android:id="@+id/problem_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down_arrow"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:id="@+id/problem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_3"
            android:text="我多久可以把车卖出去我多久可以把车卖出去我多久可以我多久可以把车卖出去我多久可以把车卖出去我多久可以"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>