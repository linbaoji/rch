<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_2"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/white"
        >
        <ImageView
            android:paddingRight="15dp"
            android:id="@+id/financial_tow_submit_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交信息"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black_1"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@mipmap/financial_two_icon"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/financial_tow_submit_name"
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:hint="姓名"
                    android:background="@drawable/edit_text_drawable"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_3"
                    />

                <EditText
                    android:id="@+id/financial_tow_submit_phone"
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:hint="手机号"
                    android:background="@drawable/edit_text_drawable"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray_3"
                    android:inputType="phone"
                    android:maxLength="11"
                    />


                <LinearLayout
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_text_drawable"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/financial_tow_submit_code_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:hint="短信验证码"
                        android:background="@null"
                        android:textColor="@color/gray_3"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="6"
                        />
                    <TextView
                        android:id="@+id/financial_tow_submit_code"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button"
                        android:textSize="11sp"
                        android:text="获取验证码"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/financial_tow_submit_ok"
                    android:layout_width="315dp"
                    android:layout_height="40dp"
                    android:text="提交"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
