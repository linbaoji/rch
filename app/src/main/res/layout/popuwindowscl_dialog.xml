<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--车龄-数据-->
    <LinearLayout
        android:id="@+id/home_age_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_tab_container"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/age_zero"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="不限"
                android:textSize="14sp"
                android:gravity="center"
                android:tag="0"
                android:textColor="@color/orange_2"
                android:background="@android:color/white"
                />

            <TextView
                android:id="@+id/age_one"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="1年内"
                android:tag="1-in"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />
            <TextView
                android:id="@+id/age_two"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="2年内"
                android:tag="2-in"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/age_three"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="3年内"
                android:textSize="14sp"
                android:gravity="center"
                android:tag="3-in"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

            <TextView
                android:id="@+id/age_four"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="4年内"
                android:tag="4-in"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />
            <TextView
                android:id="@+id/age_five"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="5年内"
                android:textSize="14sp"
                android:gravity="center"
                android:tag="5-in"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/age_six"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="6年内"
                android:textSize="14sp"
                android:gravity="center"
                android:tag="6-in"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

            <TextView
                android:id="@+id/age_seven"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="6年以上"
                android:tag="7-on"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:tag="7"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black_1"
                android:background="@android:color/white"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义年限"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            android:textColor="@color/gray_4"
            android:paddingTop="15dp"
            android:background="@android:color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:background="@android:color/white"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/money_frame"
                >
                <EditText
                    android:id="@+id/et_custom_age_one"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text=""
                    android:inputType="number"
                    android:maxLength="3"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="@color/gray_3"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="2dp"
                android:background="@color/gray_3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/money_frame"
                >
                <EditText
                    android:id="@+id/et_custom_age_two"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:text=""
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="3"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="@color/gray_3"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/custom_age_filter"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:text="确定"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/money_ok_frame"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>