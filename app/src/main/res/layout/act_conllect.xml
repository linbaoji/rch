<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_collbg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/yuanback">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/writeback" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的收藏"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_zsz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在售中"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_zsz"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/orange_4"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ysq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售罄"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_ysq"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/orange_4"></View>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_yxj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已下架"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_yxj"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/orange_4"></View>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            style="@style/view_line"></View>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/home_tab_container"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <!--最新上架-->
            <LinearLayout
                android:id="@+id/home_title_one_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/home_title_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新上架"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/home_title_one_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/back_xb" />

            </LinearLayout>

            <!--品牌-->
            <LinearLayout
                android:id="@+id/home_title_two_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_title_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/home_title_two_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/back_xb" />

            </LinearLayout>

            <!--价格-->
            <LinearLayout
                android:id="@+id/home_title_three_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_title_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/home_title_three_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/back_xb" />

            </LinearLayout>

            <!--车龄-->
            <LinearLayout
                android:id="@+id/home_title_four_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_title_four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车龄"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/home_title_four_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/back_xb" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_nocontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/noinfo" />

            <LinearLayout
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您还没有收藏的车辆," />

                <TextView
                    android:id="@+id/tv_select_car"
                    android:textColor="@color/orange_2"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 快去选车页 " />

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行收藏吧~" />


            </LinearLayout>


        </LinearLayout>

        <com.rch.custom.HomeLable
            android:id="@+id/home_lable_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tab_container"
            android:orientation="vertical"
            android:paddingBottom="5dp" />

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@+id/home_lable_container"-->
            <!--android:paddingBottom="20dp">-->

            <com.handmark.pulltorefresh.library.PullToRefreshRecyclerView
                android:id="@+id/home_recyclerView"
                android:layout_below="@+id/home_lable_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill"
                ptr:ptrMode="both" />

        <!--</RelativeLayout>-->

        <com.rch.custom.LoadingView
            android:layout_below="@+id/home_lable_container"
            android:id="@+id/ld_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.rch.custom.LoadingView>


        <!--最新上架，数据-->
        <LinearLayout
            android:id="@+id/home_sort_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_tab_container"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/sort_one"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:tag="1"
                android:text="最新上架"
                android:textColor="@color/orange_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sort_two"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:tag="2"
                android:text="价格最低"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sort_three"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:tag="3"
                android:text="价格最高"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray" />

        </LinearLayout>

        <!--金额-数据-->
        <LinearLayout
            android:id="@+id/home_money_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_tab_container"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/money_zero"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="0"
                    android:text="不限"
                    android:textColor="@color/orange_2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/money_one"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="1"
                    android:text="0-30万"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/money_two"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="2"
                    android:text="30-50万"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/money_three"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="3"
                    android:text="50-70万"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/money_four"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="4"
                    android:text="70-100万"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/money_five"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="5"
                    android:text="100万以上"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@android:color/white"
                android:paddingTop="18dp"
                android:text="自定义价格(万)"
                android:textColor="@color/gray_4"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/money_frame"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_custom_money_one"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="万"
                        android:textColor="@color/gray_3"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/money_frame"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_custom_money_two"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="万"
                        android:textColor="@color/gray_3"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/custom_money_filter"
                    android:layout_width="68dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/money_ok_frame"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray" />

        </LinearLayout>

        <!--车龄-数据-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/home_age_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_tab_container"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_zero"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="0"
                    android:text="不限"
                    android:textColor="@color/orange_2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_one"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="1-in"
                    android:text="1年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_two"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="2-in"
                    android:text="2年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_three"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="3-in"
                    android:text="3年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_four"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="4-in"
                    android:text="4年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_five"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="5-in"
                    android:text="5年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_six"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="6-in"
                    android:text="6年内"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_seven"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="6-on"
                    android:text="6年以上"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:tag="7"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="自定义年限"
                android:textColor="@color/gray_4"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/money_frame"
                    android:gravity="center">

                    <EditText

                        android:paddingRight="5dp"
                        android:id="@+id/et_custom_age_one"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="年"
                        android:textColor="@color/gray_3"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/money_frame"
                    android:gravity="center">

                    <EditText
                        android:paddingRight="5dp"
                        android:id="@+id/et_custom_age_two"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="年"
                        android:textColor="@color/gray_3"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/custom_age_filter"
                    android:layout_width="68dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/money_ok_frame"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ed702d"
            android:gravity="center"
            android:padding="15dp"
            android:text="您还没有收藏车辆，无法分享"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>