<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/financial_color"
        android:text="企业金融服务"/>
    <TextView
        android:id="@+id/tv_look_financial_detail"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/financial_color"
        android:text="查看金融详情 >"/>
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_lixi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lixi"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/financial_color"
                android:textSize="12sp"
                android:text="融资利息超低"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rongzi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rongzi"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/financial_color"
                android:textSize="12sp"
                android:text="融资金额超高"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_changhuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/changhuan"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/financial_color"
                android:textSize="12sp"
                android:text="偿还方式多样"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_car_finance"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            style="@style/home_financial_style"
            android:text="单车融资"
            />
        <TextView
            android:id="@+id/tv_stock_finance"
            android:gravity="center_horizontal"
            style="@style/home_financial_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="库存融资"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_claim_finance"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            style="@style/home_financial_style"
            android:text="应收账款保理融资"
            />
        <TextView
            android:id="@+id/tv_car_credit"
            android:gravity="center_horizontal"
            style="@style/home_financial_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="车抵贷"
            />
    </LinearLayout>
</LinearLayout>
