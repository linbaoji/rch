<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:id="@+id/ll_zt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--左边线条-->
        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_duigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greenyuan" />

            <View
                android:id="@+id/view_sbd"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/orange_2"></View>
        </LinearLayout>

        <!--右边文字-->
        <LinearLayout
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-12-12  14:00:00｜电话 ｜ 张三"
                android:textColor="@color/gray_3"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_cus_level"
                style="@style/tv_soldcar"
                android:textColor="@color/black"
                android:text="客戶级别：H级-建议1-2天跟进一次" />
            <TextView
                android:id="@+id/tv_cus_result"
                style="@style/tv_soldcar"
                android:textColor="@color/black"
                android:text="跟进结果：约定下次跟进" />
            <TextView
                android:id="@+id/tv_cus_content"
                style="@style/tv_soldcar"
                android:textColor="@color/black"
                android:text="跟进内容：我做了一次跟进，客户有意愿买车，所以打算后期跟进。" />
            <TextView
                android:id="@+id/tv_next_time"
                style="@style/tv_soldcar"
                android:textColor="@color/black"
                android:text="下次回访时间：2018年9月10日 10:00" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>