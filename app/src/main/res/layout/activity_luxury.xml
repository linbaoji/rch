<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        >
        <ImageView

            android:paddingRight="15dp"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豪车定制需求"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black_1"/>



    </RelativeLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:paddingBottom="30dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/gray_13"
            android:textSize="13sp"
            android:text="请选择车辆类型："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_marginRight="30dp"
            android:id="@+id/rg_check"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:textColor="@drawable/check_color"
                android:background="@drawable/check_bg"
                android:checked="true"
                android:id="@+id/rb_jc"
                android:gravity="center"
                android:padding="8dp"
                android:button="@null"
                android:text="我要高端二手车"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:visibility="invisible"
                android:layout_marginLeft="25dp"
                android:id="@+id/rb_xc"
                android:padding="8dp"
                android:background="@drawable/check_bg"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/check_color"
                android:text="我要新车/平行进口车"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:paddingBottom="30dp"
        android:background="@android:color/white"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/gray_13"
            android:textSize="13sp"
            android:text="请对您想要购买的豪车进行简单的描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:minHeight="100dp"
            android:layout_marginTop="30dp"
            android:id="@+id/et_ms"
            android:paddingLeft="15dp"
            android:maxLength="300"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/my_reserve_color"
            android:textSize="14sp"
            android:gravity="top"
            android:hint="请输入您想要的豪车品牌、车系、车型或相关描述..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_tj"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="提交"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />






</LinearLayout>