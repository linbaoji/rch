<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:id="@+id/home_area_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/car_fragment_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="全国"
                android:textSize="16sp"
                android:textColor="@color/black_1"
                />

            <ImageView
                android:id="@+id/home_area_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xb"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_newcar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_newcar"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新车"
                    android:textSize="13sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black_1"/>

                <View
                    android:id="@+id/view_newcar"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black_2"
                    android:layout_alignParentBottom="true"
                    android:layout_width="10dp"
                    android:layout_height="3dp"></View>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seccar"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_seccar"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二手车"
                    android:textSize="13sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black_1"/>

                <View
                    android:id="@+id/view_seccar"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black_2"
                    android:layout_alignParentBottom="true"
                    android:layout_width="10dp"
                    android:layout_height="3dp"></View>


            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fr_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


</LinearLayout>