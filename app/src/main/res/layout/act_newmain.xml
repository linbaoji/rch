<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fram_main"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>


    <RadioGroup
        android:paddingBottom="3dp"
        android:paddingTop="10dp"
        android:id="@+id/rd_grpup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:textSize="10sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/selected_data"
            android:text="首页"
            android:textColor="@drawable/btn_text_color"
            />

        <RadioButton
            android:id="@+id/rb_chosecar"
            android:textSize="10sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/choose_car"
            android:text="选车"
            android:textColor="@drawable/btn_text_color" />


        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_worktab"
            android:textSize="10sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/selected_worktab"
            android:text="工作台"
            android:textColor="@drawable/btn_text_color"
            />

        <RadioButton
            android:id="@+id/rb_bcircle"
            android:textSize="10sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/selected_busicircle"
            android:text="生意圈"
            android:textColor="@drawable/btn_text_color" />



        <RadioButton
            android:textSize="10sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/rb_my"
            android:drawableTop="@drawable/selected_my"
            android:text="我的"
            android:textColor="@drawable/btn_text_color"
            />

    </RadioGroup>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:layout_marginRight="25dp"
        android:id="@+id/iv_customer"
        android:layout_marginBottom="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/custemor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
