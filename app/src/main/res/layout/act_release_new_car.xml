<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include
        layout="@layout/common_layout_top"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    style="@style/view_line"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rch.custom.CommonView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:desText="基本信息"
                        app:desTextSize="16sp"
                        app:isShowArraw="false"
                        app:isShowCategoryImage="false"/>



                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>

                    <LinearLayout
                        android:id="@+id/ll_ppcx"
                        style="@style/ll_fb"
                        android:minHeight="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="品牌车型"
                            android:textColor="@color/black_1" />

                        <TextView
                            android:textColor="@color/gray_3"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_ppcx"
                            style="@style/et_fb"
                            android:layout_marginLeft="35dp"
                            android:text="请选择品牌车型"/>

                        <ImageView style="@style/iv_fb_right"/>

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>

                    <LinearLayout
                        android:id="@+id/ll_clszd"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="车辆所在地"
                            android:textColor="@color/black_1" />

                        <TextView
                            android:textColor="@color/gray_3"
                            android:id="@+id/tv_ss"
                            style="@style/et_fb"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:text="请选择省市" />

                        <ImageView style="@style/iv_fb_right" />

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>

                    <LinearLayout
                        android:id="@+id/ll_cg"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="车规"
                            android:textColor="@color/black_1" />

                        <TextView
                            android:textColor="@color/gray_3"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_cg"
                            style="@style/et_fb"
                            android:layout_marginLeft="35dp"
                            android:text="请选择车规" />

                        <ImageView style="@style/iv_fb_right" />

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="车身颜色"
                            android:textColor="@color/black_1" />

                        <EditText
                            android:textColorHint="@color/gray_3"
                            android:textColor="@color/black_2"
                            android:gravity="center_vertical"
                            android:id="@+id/et_body_color"
                            style="@style/et_fb"
                            android:maxLength="20"
                            android:layout_marginLeft="35dp"
                            android:hint="请输入车身颜色" />

                        <!--<ImageView style="@style/iv_fb_right" />-->

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="内饰颜色"
                            android:textColor="@color/black_1" />

                        <EditText
                            android:maxLength="20"
                            android:textColorHint="@color/gray_3"
                            android:textColor="@color/black_2"
                            android:gravity="center_vertical"
                            android:id="@+id/et_interior_color"
                            style="@style/et_fb"
                            android:layout_marginLeft="35dp"
                            android:hint="请输入内饰颜色" />

                        <!--<ImageView style="@style/iv_fb_right" />-->

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/ll_mdj"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="门店价"
                            android:textColor="@color/black_1" />
                        <LinearLayout
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/noselect_price"
                                >
                                <EditText
                                    android:minWidth="50dp"
                                    android:id="@+id/et_mendian_money_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:maxLength="8"
                                    android:gravity="right|center_vertical"
                                    android:textSize="14sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="万元"
                                    android:textColor="@color/gray_3"
                                    android:layout_marginRight="10dp"
                                    android:textSize="14sp"
                                    />

                            </LinearLayout>

                            <View
                                android:layout_gravity="center_vertical"
                                android:layout_width="8dp"
                                android:layout_height="2dp"
                                android:background="@color/gray_3"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/noselect_price"
                                >
                                <EditText
                                    android:minWidth="50dp"
                                    android:id="@+id/et_mendian_money_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@null"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:singleLine="true"
                                    android:maxLength="8"
                                    android:gravity="right|center_vertical"
                                    android:textSize="14sp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="万元"
                                    android:textColor="@color/gray_3"
                                    android:layout_marginRight="10dp"
                                    android:textSize="14sp"
                                    />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/ll_pfj"
                        style="@style/ll_fb">

                        <TextView style="@style/tv_red_xin" />

                        <TextView
                            style="@style/tv_red_xin"
                            android:layout_marginLeft="15dp"
                            android:text="批发价"
                            android:textColor="@color/black_1" />

                        <LinearLayout
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/noselect_price"
                                >
                                <EditText
                                    android:minWidth="50dp"
                                    android:id="@+id/et_pifa_money_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:maxLength="8"
                                    android:gravity="right|center_vertical"
                                    android:textSize="14sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="万元"
                                    android:textColor="@color/gray_3"
                                    android:layout_marginRight="10dp"
                                    android:textSize="14sp"
                                    />

                            </LinearLayout>

                            <View
                                android:layout_gravity="center_vertical"
                                android:layout_width="8dp"
                                android:layout_height="2dp"
                                android:background="@color/gray_3"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/noselect_price"
                                >
                                <EditText
                                    android:minWidth="50dp"
                                    android:id="@+id/et_pifa_money_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@null"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:singleLine="true"
                                    android:maxLength="8"
                                    android:gravity="right|center_vertical"
                                    android:textSize="14sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="万元"
                                    android:textColor="@color/gray_3"
                                    android:layout_marginRight="10dp"
                                    android:textSize="14sp"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        style="@style/view_line"
                        android:paddingLeft="15dp"/>

                    <View
                        style="@style/view_line"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.rch.custom.CommonView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:desText="配置亮点"
                            app:desTextSize="16sp"
                            app:isShowArraw="false"
                            app:isShowCategoryImage="false"/>
                        <EditText
                            android:maxLength="300"
                            android:textColorHint="@color/gray_3"
                            android:textColor="@color/black_2"
                            android:id="@+id/et_refit_info"
                            android:textSize="14sp"
                            android:gravity="top"
                            android:hint="请输入配置亮点，300字以内（非必填）"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@null"/>
                    </LinearLayout>
                    <View
                        style="@style/view_line"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/text_bold_title"
                            android:text="车辆图片"/>
                        <TextView
                            android:paddingLeft="5dp"
                            style="@style/text_bold_title"
                            android:text="(您已上传"/>
                        <TextView
                            android:id="@+id/tv_img_num"
                            style="@style/text_bold_title"
                            android:textColor="@color/orange_2"
                            android:text="0"/>
                        <TextView
                            style="@style/text_bold_title"
                            android:text="张)"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="44dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="1. 最多可以上传15张图片，最少上传6张（含封面）"
                            android:textColor="@color/tv_12"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="2. 建议上传900px×600px的图片，大小不超过8M；"
                            android:textColor="@color/tv_12"
                            android:textSize="13sp" />


                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/iv_add_photo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/shangc"
                                />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:overScrollMode="never" />
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_main"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:overScrollMode="never" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_tj"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/button"
                            android:gravity="center"
                            android:text="提交审核"
                            android:textColor="@android:color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:paddingTop="10dp">
                            <CheckBox
                                android:id="@+id/cb_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layout_gravity="center_vertical"
                                android:button="@drawable/check_agreement"/>
                            <TextView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/login_desc"
                                android:textColor="@color/gray_3"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/tv_agreement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/car_agreement"
                                android:textColor="@color/orange_2"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>






</LinearLayout>