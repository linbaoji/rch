<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical">


    <include
        android:id="@+id/view_unlogin"
        layout="@layout/layout_unlogin"></include>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_work"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:text="工作台"
            android:textColor="@color/black_1"
            android:textSize="14sp"
            android:textStyle="bold" />
        <View style="@style/view_line"/>
        <LinearLayout
            android:id="@+id/ll_work_item"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_new_car_manage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xincheguanli"/>

                <TextView
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_top_un_bold"
                    android:text="新车管理"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_old_car_manage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ershoucheg"/>

                <TextView
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_top_un_bold"
                    android:text="二手车管理"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_member_manage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yuangongg"/>

                <TextView
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_top_un_bold"
                    android:text="员工管理"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_customer_manage"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/kehuguan"/>

                <TextView
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_top_un_bold"
                    android:text="客户管理"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/view_line"
        android:layout_height="10dp"/>
    <com.rch.custom.CommonView
        android:visibility="gone"
        android:id="@+id/cv_gocerti"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:desText="去认证"
        app:desTextSize="14sp"
        app:statusImage="@mipmap/renzqu"/>

    <View style="@style/view_line" />


    <com.rch.custom.CommonView
        android:id="@+id/cv_sc"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:desText="我的收藏"
        app:desTextSize="14sp"
        app:statusImage="@mipmap/shouc"/>


    <View style="@style/view_line" />

    <com.rch.custom.CommonView
        android:id="@+id/cv_fk"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:desText="意见反馈"
        app:desTextSize="14sp"
        app:statusImage="@mipmap/yijianfk" />
    <View style="@style/view_line" />
    <com.rch.custom.CommonView
        android:id="@+id/cv_sz"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:desText="设置"
        app:desTextSize="14sp"
        app:statusImage="@mipmap/myset" />

    <ImageView
        android:id="@+id/iv_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/custemor"
        android:visibility="gone" />


</LinearLayout>